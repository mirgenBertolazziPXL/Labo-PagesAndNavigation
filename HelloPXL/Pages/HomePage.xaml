<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloPXL.Pages.HomePage"
             Title="PXL Restaurant">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button ImageSource="menu.svg" Grid.Row="0" Text="Menu" TextColor="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center" 
                Background="WhiteSmoke"
                Clicked="GoToMenuPage"/>

        <Button ImageSource="about.svg" Grid.Row="1" Text="Over ons" TextColor="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center" 
                Background="WhiteSmoke" 
                Clicked="GoToAboutPage"/>
    </Grid>
</ContentPage>